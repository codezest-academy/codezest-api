{
  "name": "@codezest-academy/codezest-api",
  "version": "1.0.0",
  "description": "CodeZest Learning Service - Manages programming languages, modules, materials, assignments, and quizzes",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:nodemon": "nodemon",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "migrate:dev": "npx prisma migrate dev --schema=node_modules/@codezest-academy/codezest-db/prisma/schema.prisma",
    "migrate:deploy": "npx prisma migrate deploy --schema=node_modules/@codezest-academy/codezest-db/prisma/schema.prisma",
    "db:generate": "npx prisma generate --schema=node_modules/@codezest-academy/codezest-db/prisma/schema.prisma",
    "db:seed": "ts-node scripts/seed.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "learning",
    "education",
    "coding",
    "api",
    "microservice",
    "typescript",
    "express"
  ],
  "author": "CodeZest Academy",
  "license": "MIT",
  "dependencies": {
    "@codezest-academy/codezest-cache": "^1.0.1",
    "@codezest-academy/codezest-db": "^1.0.5",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "rate-limit-redis": "^4.3.0",
    "redis": "^5.10.0",
    "strip-ansi": "^7.0.1",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.11",
    "openapi-types": "^12.1.3",
    "prettier": "^3.1.1",
    "prisma": "^5.22.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
